<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="core.volume.enabled"
        android:summary="@string/description_app_enabled"
        android:title="@string/label_app_enabled"/>
    <EditTextPreference
        android:defaultValue="5000"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:key="core.volume.delay.systemfudge"
        android:numeric="decimal"
        android:summary="@string/description_reaction_delay"
        android:title="@string/label_reaction_delay"/>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="core.bugreporting.enabled"
        android:summary="@string/description_bug_reports"
        android:title="@string/label_bug_reports"/>
</PreferenceScreen>