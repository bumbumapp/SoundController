<?xml version="1.0" encoding="utf-8"?>
<manifest package="eu.darken.bluemusic"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="eu.darken.bluemusic.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="eu.darken.bluemusic.screens.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <receiver
            android:name="eu.darken.bluemusic.core.bluetooth.BluetoothEventReceiver"
            android:enabled="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED"/>
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED"/>/>
            </intent-filter>
        </receiver>
        <service android:name="eu.darken.bluemusic.core.BlueMusicService"/>

        <activity
            android:name="eu.darken.bluemusic.screens.settings.SettingsActivity"
            android:label="@string/navigation_label_settings"
            android:parentActivityName="eu.darken.bluemusic.screens.MainActivity"/>
        <activity
            android:name="eu.darken.bluemusic.screens.newdevice.NewDeviceActivity"
            android:label="@string/action_add_device"
            android:parentActivityName="eu.darken.bluemusic.screens.MainActivity"/>

        <meta-data
            android:name="eu.darken.bluemusic.util.ui.glide.GlideConfigModule"
            android:value="GlideModule"/>
    </application>

</manifest>